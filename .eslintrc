{
  "extends": [
    "react-app"
  ],
  "rules": {
    "quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-double"],
    "arrow-parens": ["error", "as-needed"]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts?(x)"
      ],
      "rules": {
        "additional-typescript-only-rule": "warn"
      }
    },
    {
      "files": [
        "**/*.js?(x)"
      ],
      "rules": {
        "no-unused-vars": 2
      }
    }
  ]
}
